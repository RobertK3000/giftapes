<div class="row justify-content-center">

  <div class="col-lg-6 col-12" style="margin-top:20px">
    <%= simple_form_for @mixtape do |f| %>
      <%= f.input :name, label_html: { class: "mixtapeformstyling" }, label: "What's this mixtape called?", placeholder: "Give me a name!" %>

      <div class='tracks'>
        <%= f.simple_fields_for :tracks, html: {class: 'form-inline'} do |track| %>
          <%= render 'track_fields', f: track %>
        <% end %>

      <% @mixtape.errors.each do |attr, msg|  %>
      <%= msg %>
      <% end %>

        <div class="links">
          <%= link_to_add_association "Add another track +", f, :tracks, class:"btn btn-addtrack btn-txt" %>
        </div>

      </div>
      <%= f.submit "Re-record!", class: "submitmixtapeformstyling" do %>
      <% end %>
    <% end %>
  </div>

</div>


