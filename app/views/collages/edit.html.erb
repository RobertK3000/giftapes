<h2>Edit Collage</h2>

<% @collage.collage_items.each do |item| %>
  <%= item.prompt %>
  <%= cl_image_tag(item.photo.key, width: 400, height: 450, crop:'fill' ) %>
<% end %>

<%= simple_form_for @collage do |f| %>
  <%= f.simple_fields_for :collage_items do |c| %>
    <%= c.input :prompt%>
    <%= c.input :photo, as: :file %>
  <% end %>
  <%= f.submit "save" %>
<% end %>

<%= render 'new_item' %>